<div class="blog-thumbnail" highlight>
  <div class="card-body">
    <h4 class="card-title">
    	<%= link_to blog_path(a.id), class: "card-title" do %>
    		<%= a.title %>
    	<% end %>
    	</h4>
    <h6 class="card-subtitle mb-2 text-muted"><%= a.user_id %> (views: <%= a.view %>)</h6>
    <p class="card-text">
    	<%= truncate(a.body) %>	
    	</p>

    
  </div>
</div>