<div class="blog-thumbnail">
	<div class="card-body">
		<div class="row">
			<div class="col-md-2">
				<img src=<%= a.avatar %> alt="Smiley face" width="64" height="64">
			</div>
			<div class="col-md-10">
				<h4 class="card-title">
					<%= link_to album_path(a.id), class: "card-title" do %>
						<%= a.title %>
					<% end %>
					</h4>
				<h6 class="card-subtitle mb-2 text-muted">Author: <%= a.user.name %> (total views: <%= a.views %>)</h6>		
			</div>
		</div>
	</div>
</div>